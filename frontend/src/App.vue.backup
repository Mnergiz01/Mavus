import { ref, onMounted, computed, onUnmounted } from 'vue'
import axios from 'axios'
import {
  MagnifyingGlassIcon,
  ShoppingBagIcon,
  Bars3Icon,
  XMarkIcon,
  SparklesIcon,
  StarIcon,
  ShieldCheckIcon,
  TruckIcon,
  PhoneIcon,
  EnvelopeIcon,
  MapPinIcon,
  ChevronLeftIcon,
  ChevronRightIcon,
  PlayIcon,
  ChevronDownIcon
} from '@heroicons/vue/24/outline'

const API_URL = 'http://127.0.0.1:8000/api'

const products = ref([])
const categories = ref([])
const selectedCategory = ref(null)
const searchQuery = ref('')
const isLoading = ref(false)
const selectedProduct = ref(null)
const showMobileMenu = ref(false)
const scrolled = ref(false)
const showAboutPage = ref(false)
const sortBy = ref('newest')
const selectedImageIndex = ref(0)
const exchangeRates = ref(null)
const ratesLoading = ref(false)
const selectedMetalType = ref(null)
const selectedKarat = ref(null)
const priceRange = ref({ min: null, max: null })

// Mobile menu accordion states
const showCollectionsMenu = ref(false)
const openParentCategories = ref({})
const hoveredCategory = ref(null)

// Get parent categories (categories without a parent)
const parentCategories = computed(() => {
  return categories.value.filter(cat => !cat.parent)
})

// Get all category slugs including children for filtering
function getAllCategorySlugs(categorySlug) {
  const category = categories.value.find(c => c.slug === categorySlug)
  if (!category) return [categorySlug]

  const slugs = [categorySlug]
  if (category.children && category.children.length > 0) {
    category.children.forEach(child => {
      slugs.push(child.slug)
      slugs.push(...getAllCategorySlugs(child.slug))
    })
  }
  return slugs
}

const filteredProducts = computed(() => {
  let filtered = products.value

  if (selectedCategory.value && selectedCategory.value !== 'all') {
    // Get all category slugs including children
    const categorySlugs = getAllCategorySlugs(selectedCategory.value)
    filtered = filtered.filter(p => categorySlugs.includes(p.category.slug))
  }

  if (searchQuery.value) {
    const query = searchQuery.value.toLowerCase()
    filtered = filtered.filter(p =>
      p.name.toLowerCase().includes(query) ||
      p.description.toLowerCase().includes(query)
    )
  }

  // Metal type filter
  if (selectedMetalType.value) {
    filtered = filtered.filter(p => p.metal_type === selectedMetalType.value)
  }

  // Karat filter
  if (selectedKarat.value) {
    filtered = filtered.filter(p => p.karat === selectedKarat.value)
  }

  // Price range filter
  if (priceRange.value.min !== null) {
    filtered = filtered.filter(p => parseFloat(p.price) >= priceRange.value.min)
  }
  if (priceRange.value.max !== null) {
    filtered = filtered.filter(p => parseFloat(p.price) <= priceRange.value.max)
  }

  // Sorting
  if (sortBy.value === 'price-low') {
    filtered = [...filtered].sort((a, b) => parseFloat(a.price) - parseFloat(b.price))
  } else if (sortBy.value === 'price-high') {
    filtered = [...filtered].sort((a, b) => parseFloat(b.price) - parseFloat(a.price))
  } else if (sortBy.value === 'name') {
    filtered = [...filtered].sort((a, b) => a.name.localeCompare(b.name))
  }

  return filtered
})

// Get unique metal types from products
const metalTypes = computed(() => {
  const types = new Set()
  products.value.forEach(p => {
    if (p.metal_type) types.add(p.metal_type)
  })
  return Array.from(types)
})

// Get unique karats from products
const karats = computed(() => {
  const karatSet = new Set()
  products.value.forEach(p => {
    if (p.karat) karatSet.add(p.karat)
  })
  return Array.from(karatSet).sort((a, b) => parseInt(a) - parseInt(b))
})

// Clear all filters
function clearFilters() {
  selectedMetalType.value = null
  selectedKarat.value = null
  priceRange.value = { min: null, max: null }
  sortBy.value = 'newest'
}

// Safe scroll to top function
function scrollToTop() {
  if (typeof window !== 'undefined' && window.scrollTo) {
    window.scrollTo({ top: 0, behavior: 'smooth' })
  }
}

// Scroll to specific section on home page
function scrollToSection(sectionId) {
  // Ana sayfaya dÃ¶n
  selectedCategory.value = null
  selectedProduct.value = null
  showAboutPage.value = false
  showMobileMenu.value = false

  // BÃ¶lÃ¼me scroll yap
  setTimeout(() => {
    const element = document.getElementById(sectionId)
    if (element) {
      element.scrollIntoView({ behavior: 'smooth', block: 'start' })
    }
  }, 100)
}

// Handle search
function handleSearch() {
  if (searchQuery.value.trim()) {
    // Kategori ve sayfa durumunu temizle
    selectedCategory.value = null
    selectedProduct.value = null
    showAboutPage.value = false
    showMobileMenu.value = false

    // Arama sonuÃ§larÄ±na scroll yap
    setTimeout(() => {
      scrollToTop()
    }, 100)
  }
}

const featuredProducts = computed(() => {
  return products.value.filter(p => p.is_featured)
})

const bestSellers = computed(() => {
  return products.value.filter(p => p.is_best_seller)
})

const recommendedProducts = computed(() => {
  return products.value.filter(p => p.is_recommended)
})

const newProducts = computed(() => {
  return products.value.slice(0, 4) // En yeni 4 Ã¼rÃ¼n (zaten created_at'e gÃ¶re sÄ±ralÄ± geliyor)
})

const relatedProducts = computed(() => {
  if (!selectedProduct.value) return []

  // AynÄ± kategorideki diÄŸer Ã¼rÃ¼nleri getir (seÃ§ili Ã¼rÃ¼n hariÃ§)
  return products.value
    .filter(p => p.category.slug === selectedProduct.value.category.slug && p.id !== selectedProduct.value.id)
    .slice(0, 4) // Ä°lk 4 Ã¼rÃ¼nÃ¼ gÃ¶ster
})

async function fetchData() {
  isLoading.value = true
  try {
    const [productsRes, categoriesRes] = await Promise.all([
      axios.get(`${API_URL}/products/`),
      axios.get(`${API_URL}/categories/`)
    ])
    products.value = productsRes.data.results || productsRes.data
    categories.value = categoriesRes.data.results || categoriesRes.data
  } catch (error) {
    console.error('Veri yÃ¼klenirken hata:', error)
  } finally {
    isLoading.value = false
  }
}

async function fetchExchangeRates() {
  ratesLoading.value = true
  try {
    const response = await axios.get(`${API_URL}/exchange-rates/`)
    if (response.data.success) {
      exchangeRates.value = response.data.rates
    }
  } catch (error) {
    console.error('Kurlar yÃ¼klenirken hata:', error)
  } finally {
    ratesLoading.value = false
  }
}

function selectCategory(slug) {
  selectedCategory.value = slug
  showMobileMenu.value = false
  selectedProduct.value = null
  showAboutPage.value = false
  // Filtreleri temizle
  clearFilters()
  // SayfanÄ±n en Ã¼stÃ¼ne scroll yap
  scrollToTop()
}

function viewProduct(product) {
  selectedProduct.value = product
  selectedImageIndex.value = 0
  scrollToTop()
}

function closeProductDetail() {
  selectedProduct.value = null
  selectedImageIndex.value = 0
}

function toggleAboutPage() {
  showAboutPage.value = !showAboutPage.value
  if (showAboutPage.value) {
    selectedProduct.value = null
    selectedCategory.value = null
    scrollToTop()
  }
}

function handleScroll() {
  if (typeof window !== 'undefined') {
    scrolled.value = window.scrollY > 50
  }
}

// Product image gallery functions
function selectImage(index) {
  selectedImageIndex.value = index
}

function nextImage() {
  const totalImages = getAllProductImages(selectedProduct.value).length
  selectedImageIndex.value = (selectedImageIndex.value + 1) % totalImages
}

function prevImage() {
  const totalImages = getAllProductImages(selectedProduct.value).length
  selectedImageIndex.value = selectedImageIndex.value === 0
    ? totalImages - 1
    : selectedImageIndex.value - 1
}

function getAllProductImages(product) {
  if (!product) return []
  const images = []

  // Ana gÃ¶rsel
  if (product.image) {
    images.push({ url: product.image, type: 'image', alt: product.name })
  }

  // Ek gÃ¶rseller ve videolar
  if (product.images && product.images.length > 0) {
    product.images.forEach(img => {
      images.push({
        url: img.image,
        type: img.is_video ? 'video' : 'image',
        alt: img.alt_text || product.name
      })
    })
  }

  return images
}

onMounted(() => {
  fetchData()
  fetchExchangeRates()
  window.addEventListener('scroll', handleScroll)

  // Update exchange rates every 5 minutes
  setInterval(() => {
    fetchExchangeRates()
  }, 5 * 60 * 1000)
})

onUnmounted(() => {
  window.removeEventListener('scroll', handleScroll)
})
</script>

